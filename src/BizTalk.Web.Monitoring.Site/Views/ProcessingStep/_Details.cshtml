@model ProcessingStep
@using Be.Stateless.BizTalk.Monitoring.Model
@using Be.Stateless.Extensions

<div class="tabs">
	<ul>
		<li><a href="#tab-1">Processing Details</a></li>
	</ul>
	<div id="tab-1">
		<table class="processing-step-details">
			<thead>
				<tr>
					<th>Property</th>
					<th>Value</th>
				</tr>
			</thead>
			<tbody>
				<tr class="gridrow">
					<td>Error Description</td>
					<td>@Model.ErrorDescription.IfNotNull(e => e.Replace("\r\n", "<br/>"))</td>
				</tr>
				<tr class="gridrow_alternate">
					<td>Machine Name</td>
					<td>@Model.MachineName</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>