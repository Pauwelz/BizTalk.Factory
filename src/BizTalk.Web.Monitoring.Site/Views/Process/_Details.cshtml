@using Be.Stateless.BizTalk.Web.Monitoring.Site.Helpers
@model Be.Stateless.BizTalk.Monitoring.Model.Process

<fieldset>
	<legend>@Model.FriendlyName Process</legend>
	<div class="display-label">Process Name</div>
	<div class="display-field">
		@Html.SpanFor(model => model.Name)
	</div>
	<div class="display-label">Begin Time</div>
	<div class="display-field">
		@Html.SpanFor(model => model.BeginTime.ToLocalTime(), new { title = Model.BeginTime })
	</div>
	<div class="display-label">End Time</div>
	<div class="display-field">
		@Html.SpanFor(model => model.EndTime.HasValue ? model.EndTime.Value.ToLocalTime() : model.EndTime, new { title = Model.EndTime })
	</div>
	<div class="display-label">Status</div>
	<div class="display-field">
		@Html.SpanFor(model => model.AggregatedStatus)
	</div>
	<div class="display-label">Value 1</div>
	<div class="display-field">
		@Html.SpanFor(model => model.Value1)
	</div>
	<div class="display-label">Value 2</div>
	<div class="display-field">
		@Html.SpanFor(model => model.Value2)
	</div>
	<div class="display-label">Value 3</div>
	<div class="display-field">
		@Html.SpanFor(model => model.Value3)
	</div>
</fieldset>